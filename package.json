{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Simple NodeJS using KoaJS to build a web application server",
  "main": "app.js",
  "repository": "https://github.com/remynguyen96/node-boilerplate/tree/koajs",
  "author": "Remy Nguyen",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=develop nodemon --exec babel-node src/app.js",
    "build": "cross-env NODE_ENV=production nodemon --exec babel-node src/app.js",
    "build:prop": "babel src -d build",
    "test": "jest",
    "lint-eslint": "yarn eslint -- .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint-eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "koa": "^2.5.0",
    "koa-66": "^1.0.1",
    "koa-bodyparser": "^4.2.0",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.2.0",
    "koa-morgan": "^1.0.1",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "koa2-cors": "^2.0.5",
    "lodash": "^4.17.4",
    "moment": "^2.22.1",
    "mongoose": "^5.0.15",
    "route-decorators": "^0.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^3.1.4",
    "helmet": "^3.9.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0"
  }
}
